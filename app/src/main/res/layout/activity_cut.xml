<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/sample_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:text="选取"
            android:layout_weight="1"
            android:onClick="choice"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="添加"
            android:layout_weight="1"
            android:onClick="add"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="删除"
            android:layout_weight="1"
            android:onClick="del"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="移动"
            android:layout_weight="1"
            android:onClick="move"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:text="返回"
            android:onClick="back"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="前进"
            android:layout_alignParentRight="true"
            android:onClick="go"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:text="重置位置"
            android:layout_weight="1"
            android:onClick="rePos"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="重置绘制"
            android:layout_weight="1"
            android:onClick="reDraw"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="wrap_content"
            android:text="打开相册"
            android:layout_weight="1"
            android:onClick="openAlbum"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:text="抠图"
        android:onClick="cutout"
        android:layout_height="wrap_content" />

</LinearLayout>
